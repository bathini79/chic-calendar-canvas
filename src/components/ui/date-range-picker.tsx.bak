        ));
      } else {
        // Default to next month if no date is selected
        const nextMonth = new Date();
        nextMonth.setMonth(nextMonth.getMonth() + 1);
        setSecondCalendarMonth(nextMonth);
      }
    }
  }, [isDialogOpen, isPopoverOpen, tempDateRange?.from]);  
  
